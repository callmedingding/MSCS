<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp" >

        <TextView
            android:id="@+id/teainsertTV0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/teainsertTV4"
            android:text="插入老师信息"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/teainsertTV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/teainsertET1"
            android:layout_alignBottom="@+id/teainsertET1"
            android:text="ID    号:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/teainsertTV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/teainsertET1"
            android:text="姓    名:"
            android:textSize="20dp" />

        <Button
            android:id="@+id/teainsertbtn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/teainsertET5"
            android:layout_toRightOf="@+id/teainsertTV4"
            android:background="@drawable/btn"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:onClick="teaInsertLoad"
            android:text="提交"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/teainsertET5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teainsertET4"
            android:layout_toRightOf="@+id/teainsertTV4"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine|none"
            android:singleLine="true" />

        <EditText
            android:id="@+id/teainsertET4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teainsertET3"
            android:layout_toRightOf="@+id/teainsertTV4"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine|none"
            android:singleLine="true" />

        <EditText
            android:id="@+id/teainsertET3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/teainsertET2"
            android:layout_below="@+id/teainsertET2"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine|none"
            android:singleLine="true" />

        <EditText
            android:id="@+id/teainsertET2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/teainsertTV2"
            android:layout_toRightOf="@+id/teainsertTV4"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine|none"
            android:singleLine="true" />

        <EditText
            android:id="@+id/teainsertET1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/teainsertTV0"
            android:layout_below="@+id/teainsertTV0"
            android:layout_marginTop="17dp"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine|none"
            android:singleLine="true" >

            <requestFocus />

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/teainsertTV5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/teainsertET5"
            android:layout_alignBottom="@+id/teainsertET5"
            android:layout_alignParentLeft="true"
            android:text="学    院:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/teainsertTV3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/teainsertET3"
            android:layout_alignBottom="@+id/teainsertET3"
            android:layout_alignParentLeft="true"
            android:text="性    别:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/teainsertTV4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码:"
            android:textSize="20dp"
            android:layout_alignBaseline="@+id/teainsertET4"
            android:layout_alignBottom="@+id/teainsertET4"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</ScrollView>