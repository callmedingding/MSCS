<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp" >

        <!--标题-->
        <TextView
            android:id="@+id/stuupdateTV0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingTop="10dp"
            android:layout_toRightOf="@+id/stuupdateTV11"
            android:text="修改用户信息"
            android:textSize="20dp" />

        <!--可选类型-->
        <TextView
            android:id="@+id/stuupdateTV11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stuupdateET11"
            android:layout_alignBottom="@+id/stuupdateET11"
            android:layout_alignParentLeft="true"
            android:text="可选课程类型:"
            android:textSize="20dp" />

        <!--账号状态-->
        <TextView
            android:id="@+id/stuupdateTV10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stuupdateET10"
            android:layout_alignBottom="@+id/stuupdateET10"
            android:layout_alignParentLeft="true"
            android:text="账号状态:"
            android:textSize="20dp" />

        <!--学院-->
        <TextView
            android:id="@+id/stuupdateTV9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stuupdateET9"
            android:layout_alignBottom="@+id/stuupdateET9"
            android:layout_alignParentLeft="true"
            android:text="学        院:"
            android:textSize="20dp" />

        <!--班级-->
        <TextView
            android:id="@+id/stuupdateTV8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stuupdateET8"
            android:layout_alignBottom="@+id/stuupdateET8"
            android:layout_alignParentLeft="true"
            android:text="班        级:"
            android:textSize="20dp" />

        <!--邮箱-->
        <TextView
            android:id="@+id/stuupdateTV7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stuupdateET7"
            android:layout_alignBottom="@+id/stuupdateET7"
            android:layout_alignParentLeft="true"
            android:text="电子邮箱:"
            android:textSize="20dp" />

        <!--电话-->
        <TextView
            android:id="@+id/stuupdateTV6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stuupdateET6"
            android:layout_alignBottom="@+id/stuupdateET6"
            android:layout_alignParentLeft="true"
            android:text="电        话:"
            android:textSize="20dp" />

        <!--性别-->
        <TextView
            android:id="@+id/stuupdateTV5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stuupdateET5"
            android:layout_alignBottom="@+id/stuupdateET5"
            android:layout_alignParentLeft="true"
            android:text="性        别:"
            android:textSize="20dp" />

        <!--账号类型-->
        <TextView
            android:id="@+id/stuupdateTV4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号类型:"
            android:textSize="20dp"
            android:layout_alignBaseline="@+id/stuupdateET4"
            android:layout_alignBottom="@+id/stuupdateET4"
            android:layout_alignParentStart="true" />

        <!--密码-->
        <TextView
            android:id="@+id/stuupdateTV3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密        码:"
            android:textSize="20dp"
            android:layout_alignBaseline="@+id/stuupdateET3"
            android:layout_alignBottom="@+id/stuupdateET3"
            android:layout_alignParentStart="true" />

        <!--姓名-->
        <TextView
            android:id="@+id/stuupdateTV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/stuupdateET1"
            android:text="姓        名:"
            android:textSize="20dp" />

        <!--账号-->
        <TextView
            android:id="@+id/stuupdateTV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/stuupdateET1"
            android:layout_alignBottom="@+id/stuupdateET1"
            android:text="账        号:"
            android:textSize="20dp" />


        <!--账号类型-->
        <Spinner
            android:id="@+id/stuupdateSP1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stuupdateET3"
            android:layout_toRightOf="@+id/stuupdateTV4"
            android:ems="10"
            android:gravity="top"
            android:spinnerMode="dialog"/>

        <!--性别-->
        <Spinner
            android:id="@+id/stuupdateSP2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stuupdateSP1"
            android:layout_toRightOf="@+id/stuupdateTV5"
            android:ems="10"
            android:gravity="top"
            android:spinnerMode="dialog"/>

        <!--班级-->
        <Spinner
            android:id="@+id/stuupdateSP3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stuupdateET7"
            android:layout_toRightOf="@+id/stuupdateTV8"
            android:ems="10"
            android:gravity="top"
            android:spinnerMode="dialog"/>

        <!--学院-->
        <Spinner
            android:id="@+id/stuupdateSP4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stuupdateET8"
            android:layout_toRightOf="@+id/stuupdateTV9"
            android:ems="10"
            android:gravity="top"
            android:spinnerMode="dialog"/>

        <!--账号状态-->
        <Spinner
            android:id="@+id/stuupdateSP5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stuupdateET9"
            android:layout_toRightOf="@+id/stuupdateTV10"
            android:ems="10"
            android:gravity="top"
            android:spinnerMode="dialog"/>

        <!--可选课程-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stuupdate_course_type_set"
            android:text="选择"
            android:textSize="10dp"
            android:layout_below="@+id/stuupdateET10"
            android:layout_toRightOf="@+id/stuupdateTV11"
            android:layout_alignBottom="@+id/stuupdateTV11"/>
            <!--android:onClick="CreateDialog"-->

        <!--可选类型-->
        <EditText
            android:id="@+id/stuupdateET11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stuupdateET10"
            android:layout_toRightOf="@+id/stuupdateTV11"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine|none"
            android:singleLine="true"
            android:visibility="invisible"/>

        <!--账号状态-->
        <EditText
            android:id="@+id/stuupdateET10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stuupdateET9"
            android:layout_toRightOf="@+id/stuupdateTV10"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine|none"
            android:singleLine="true"
            android:layout_alignEnd="@+id/stuupdateET11"
            android:visibility="invisible"/>

        <!--学院-->
        <EditText
            android:id="@+id/stuupdateET9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stuupdateET8"
            android:layout_toRightOf="@+id/stuupdateTV10"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine|none"
            android:singleLine="true"
            android:layout_alignEnd="@+id/stuupdateET10"
            android:visibility="invisible"/>

        <!--班级-->
        <EditText
            android:id="@+id/stuupdateET8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stuupdateET7"
            android:layout_toRightOf="@+id/stuupdateTV4"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine|none"
            android:singleLine="true"
            android:layout_alignEnd="@+id/stuupdateET9"
            android:visibility="invisible"/>


        <!--邮箱-->
        <EditText
            android:id="@+id/stuupdateET7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/stuupdateET6"
            android:layout_below="@+id/stuupdateET6"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine|none"
            android:singleLine="true"
            android:layout_alignEnd="@+id/stuupdateET8"
            android:layout_toRightOf="@+id/stuupdateTV4"/>

        <!--电话-->
        <EditText
            android:id="@+id/stuupdateET6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/stuupdateET5"
            android:layout_below="@+id/stuupdateET5"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine|none"
            android:singleLine="true"
            android:layout_alignEnd="@+id/stuupdateET8"
            android:layout_toRightOf="@+id/stuupdateTV4"/>

        <!--性别-->
        <EditText
            android:id="@+id/stuupdateET5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stuupdateET4"
            android:layout_toRightOf="@+id/stuupdateTV4"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine|none"
            android:singleLine="true"
            android:layout_alignEnd="@+id/stuupdateET8"
            android:visibility="invisible"/>

        <!--账号类型-->
        <EditText
            android:id="@+id/stuupdateET4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stuupdateET3"
            android:layout_toRightOf="@+id/stuupdateTV4"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine|none"
            android:singleLine="true"
            android:layout_alignEnd="@+id/stuupdateET5"
            android:visibility="invisible"/>

        <!--密码-->
        <EditText
            android:id="@+id/stuupdateET3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/stuupdateET2"
            android:layout_below="@+id/stuupdateET2"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine|textPassword"
            android:singleLine="true"
            android:layout_alignEnd="@+id/stuupdateET4"
            android:layout_toRightOf="@+id/stuupdateTV4"/>

        <!--姓名-->
        <EditText
            android:id="@+id/stuupdateET2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/stuupdateTV2"
            android:layout_toRightOf="@+id/stuupdateTV4"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine|none"
            android:singleLine="true"
            android:layout_alignEnd="@+id/stuupdateET4" />

        <!--账号-->
        <EditText
            android:id="@+id/stuupdateET1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/stuupdateTV0"
            android:layout_below="@+id/stuupdateTV0"
            android:layout_marginTop="17dp"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine|none"
            android:singleLine="true"
            android:layout_alignEnd="@+id/stuupdateET2"
            android:layout_toRightOf="@+id/stuupdateTV4"/>

        <Button
            android:id="@+id/stuupdatebtn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/stuupdateET11"
            android:layout_toRightOf="@+id/stuupdateTV11"
            android:background="@drawable/btn"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:onClick="stuInsertLoad"
            android:text="更新"
            android:textSize="25dp"
            android:padding="1dp"/>


    </RelativeLayout>

</ScrollView>