<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:layout_marginLeft="20dp" >

        <TextView
            android:id="@+id/coureseselectETcTV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="26dp"
            android:text="查找课程信息"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/courseselectTV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/coureseselectETcTV1"
            android:layout_marginTop="36dp"
            android:text="请输入要查找的课程的ID号："
            android:textSize="20dp" />

        <EditText
            android:id="@+id/courseselectET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/courseselectTV2"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:inputType="textMultiLine" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/courseselectbtn"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/courseselectET"
            android:layout_alignBottom="@+id/courseselectET"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/courseselectET"
            android:background="@drawable/btn"
            android:onClick="courseSelectLoad"
            android:text="查询"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/courseselectTV3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/courseselectET"
            android:layout_marginTop="23dp"
            android:textColor="#f00"
            android:textSize="20dp" />
    </RelativeLayout>

</ScrollView>